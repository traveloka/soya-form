{
  "name": "soya-form",
  "version": "0.0.14",
  "description": "React form library for soya",
  "main": "lib/index.js",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel src -d lib",
    "clean": "rimraf lib",
    "coverage": "jest --coverage",
    "coveralls": "yarn run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "marlint",
    "lint:fix": "yarn run lint -- --fix",
    "precommit": "lint-staged",
    "prepublish": "yarn run clean && yarn run build",
    "test": "jest",
    "watch": "yarn run build -- -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/traveloka/soya-form.git"
  },
  "keywords": [
    "react",
    "soya",
    "form",
    "redux"
  ],
  "dependencies": {
    "hoist-non-react-statics": "^2.5.0",
    "prop-types": "^15.5.10"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.0",
    "husky": "^0.14.0",
    "jest": "^22.1.1",
    "lint-staged": "^7.1.3",
    "marlint": "^6.2.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.1"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-redux": "^5.0.0",
    "redux": "^3.7.0",
    "soya-next": "^0.3.0"
  },
  "lint-staged": {
    "*.js": [
      "lint:fix",
      "git add"
    ]
  },
  "marlint": {
    "envs": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "ignores": [
      "**/coverage/**",
      "**/lib/**",
      "**/node_modules/**"
    ]
  }
}
